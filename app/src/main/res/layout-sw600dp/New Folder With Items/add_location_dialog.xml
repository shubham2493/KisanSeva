<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@color/all_background"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="10.5">

        <ImageView
            android:id="@+id/placeImage"
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/grey_border"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/my_checkin" />


        <EditText
            android:id="@+id/placeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeImage"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:background="@drawable/edittext_selector"
            android:hint="Place Name"
            android:padding="5dp"
            android:textSize="14dp"
            android:textColor="@color/text_dark" />


        <EditText
            android:id="@+id/placeDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeName"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_selector"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:padding="5dp"
            android:maxLength="1000"
            android:textSize="14dp"
            android:textColor="@color/text_dark" />


        <Button
            android:id="@+id/saveAndShareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeDescription"
            android:layout_marginTop="15dp"
            android:background="@color/facebook_blue_button"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:paddingBottom="12dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="12dp"
            android:text="@string/save_share"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveAndShareButton"
            android:layout_marginTop="15dp"
            android:background="@color/theme_yellow_color"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:paddingBottom="12dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="12dp"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </RelativeLayout>
</ScrollView>