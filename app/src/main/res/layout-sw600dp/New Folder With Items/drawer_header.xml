<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_cover" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_placeholder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/profileUserName"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:border_color="#ffffff"
        app:border_width="2dp" />


    <TextView
        android:id="@+id/profileUserName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/headerBackground"
        android:background="@color/profile_badge_layout_background"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Profile UserName"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

</RelativeLayout>